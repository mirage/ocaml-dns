(library
 (name udns_cli)
 (synopsis "A Domain Name system (DNS) library, unix applications")
 (public_name udns-cli)
 (wrapped false)
 (modules udns_cli)
 (libraries udns cmdliner ptime.clock.os logs.fmt fmt.cli logs.cli fmt.tty ipaddr.unix))

